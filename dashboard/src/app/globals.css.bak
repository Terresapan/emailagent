@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 240 33% 3%;
    --card: 0 0% 100%;
    --card-foreground: 240 33% 3%;
    --popover: 0 0% 100%;
    --popover-foreground: 240 33% 3%;
    --primary: 271 91% 65%;
    /* Brand Purple */
    --primary-foreground: 0 0% 98%;
    --secondary: 240 19% 96%;
    --secondary-foreground: 240 33% 3%;
    --muted: 240 19% 96%;
    --muted-foreground: 240 5% 65%;
    --accent: 240 19% 96%;
    --accent-foreground: 240 33% 3%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 98%;
    --border: 240 5.9% 90%;
    --input: 240 5.9% 90%;
    --ring: 271 91% 65%;
    --radius: 0.5rem;
    --chart-1: 12 76% 61%;
    --chart-2: 173 58% 39%;
    --chart-3: 197 37% 24%;
    --chart-4: 43 74% 66%;
    --chart-5: 27 87% 67%;
  }

  .dark {
    /* New Purple/Teal Theme */
    --background: 240 21.3115% 11.9608%;
    --foreground: 226.1538 63.9344% 88.0392%;

    --card: 240 21.0526% 14.9020%;
    --card-foreground: 226.1538 63.9344% 88.0392%;

    --popover: 234.2857 13.2075% 31.1765%;
    --popover-foreground: 226.1538 63.9344% 88.0392%;

    --primary: 189.1837 71.0145% 72.9412%;
    /* Teal/Cyan */
    --primary-foreground: 240 21.0526% 14.9020%;

    --secondary: 232.5000 12% 39.2157%;
    --secondary-foreground: 226.1538 63.9344% 88.0392%;

    --muted: 230.5263 18.8119% 19.8039%;
    --muted-foreground: 227.6471 23.6111% 71.7647%;

    --accent: 267.4074 83.5052% 80.9804%;
    /* Lavender Purple */
    --accent-foreground: 240 21.0526% 14.9020%;

    --destructive: 343.2692 81.2500% 74.9020%;
    --destructive-foreground: 240 21.0526% 14.9020%;

    --border: 236.8421 16.2393% 22.9412%;
    --input: 236.8421 16.2393% 22.9412%;

    --ring: 267.4074 83.5052% 80.9804%;

    --chart-1: 267.4074 83.5052% 80.9804%;
    --chart-2: 189.1837 71.0145% 72.9412%;
    --chart-3: 115.4545 54.0984% 76.0784%;
    --chart-4: 22.9565 92.0000% 75.4902%;
    --chart-5: 9.6000 55.5556% 91.1765%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
  }
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: hsl(var(--muted-foreground) / 0.3);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: hsl(var(--muted-foreground) / 0.5);
}

/* Neu-Editorial Utilities */
@layer utilities {
  .glass-card {
    @apply bg-card/60 backdrop-blur-md border border-white/5;
  }

  .text-giant {
    font-size: clamp(1.75rem, 12vw, 12rem);
    line-height: 0.9;
    letter-spacing: -0.04em;
  }

  /* Magnetic & Hover Effects */
  .hover-glow {
    transition: all 0.3s ease;
  }

  .hover-glow:hover {
    box-shadow: 0 0 20px -5px hsl(var(--primary) / 0.3);
    border-color: hsl(var(--primary) / 0.3);
  }

  /* ===== ACCENT CONTROLS (New Theme) ===== */
  .text-accent {
    color: hsl(var(--accent));
  }

  .bg-accent {
    background-color: hsl(var(--accent));
  }

  .border-accent {
    border-color: hsl(var(--accent));
  }

  /* ===== COMPONENT TOKENS ===== */

  /* Item Patterns (launches, stories, list items) */
  .item-card {
    @apply p-3 rounded-lg bg-white/5 hover:bg-white/10 transition-colors border border-white/5;
  }

  .item-title {
    @apply font-semibold text-white;
  }

  .item-description {
    @apply text-sm text-muted-foreground hover:text-gray-200 transition-colors duration-300;
  }

  .item-tag {
    /* 12px, lighter weight to appear smaller than tagline */
    @apply text-xs px-2 py-0.5 rounded-full bg-accent/10 text-accent font-normal border border-accent/20;
  }

  .item-tag-neutral {
    @apply text-xs px-3 py-1 rounded-full bg-white/5 text-gray-400 font-medium border border-white/10;
  }

  .item-meta {
    @apply text-xs text-muted-foreground;
  }

  /* Section Headers */
  .section-header {
    @apply font-serif text-lg tracking-wide text-white;
  }

  .section-label {
    @apply text-xs font-bold uppercase tracking-widest;
  }

  /* Card Patterns */
  .card-title {
    @apply font-serif text-2xl tracking-wide text-white;
  }

  .card-title-sm {
    @apply font-serif text-base font-bold tracking-wider text-white;
  }

  .card-empty-text {
    @apply font-serif italic text-muted-foreground;
  }

  /* List Items (bordered left) */
  .list-item {
    /* Updated hover state to use accent */
    @apply leading-relaxed pl-4 border-l-2 border-white/10 hover:border-accent/50 transition-colors duration-300;
  }

  .list-item-text {
    @apply text-muted-foreground hover:text-gray-200 transition-colors duration-300;
  }

  /* Badges */
  .badge-votes {
    @apply shrink-0 bg-white/10 text-white hover:bg-white/20;
  }

  /* Status Indicators */
  .status-label {
    @apply text-xs font-medium text-white;
  }

  /* ===== ANALYSIS PAGE UTILITIES ===== */

  .trend-score-value {
    @apply font-serif text-4xl font-bold tracking-tight text-white;
  }

  .trend-label {
    @apply text-[10px] uppercase tracking-widest text-muted-foreground font-semibold;
  }

  .audience-badge {
    @apply text-[10px] px-2 py-0.5 rounded-full border border-white/10 uppercase tracking-widest font-medium;
  }

  .audience-badge-technical {
    @apply bg-primary/10 text-primary border-primary/20;
  }

  .audience-badge-strategic {
    @apply bg-accent/10 text-accent border-accent/20;
  }

  .trend-card {
    @apply relative bg-card/40 backdrop-blur-sm border border-white/5 p-5 rounded-xl transition-all duration-300 hover:bg-card/80 hover:border-accent/50 hover:shadow-2xl hover:shadow-accent/20 hover:-translate-y-1;
  }
}